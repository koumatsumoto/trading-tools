{
  "name": "@koumatsumoto/trading-tools",
  "version": "0.13.0",
  "description": "The personal module to develop my trading program",
  "author": "Kou Matsumoto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koumatsumoto/trading-tools.git"
  },
  "homepage": "https://github.com/koumatsumoto/trading-tools#readme",
  "bugs": {
    "url": "https://github.com/koumatsumoto/trading-tools/issues"
  },
  "engines": {
    "node": ">=20.2.0",
    "npm": ">=9.6.6"
  },
  "type": "module",
  "main": "./dist/trading-tools.js",
  "module": "./dist/trading-tools.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/trading-tools.js"
      },
      "require": "./dist/trading-tools.umd.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@koumatsumoto"
  },
  "scripts": {
    "build": "tsc && vite build",
    "format": "prettier --write --ignore-path .gitignore .",
    "lint": "prettier --check --ignore-path .gitignore .",
    "test": "vitest run",
    "NOTE: `|| true` is used to avoid errors at npm publish": "ignore command errors to the bug of https://github.com/npm/cli/issues/3707",
    "prepare": "husky install || true"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "remeda": "^1.23.0",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.7.1",
    "ts-pattern": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@rollup/plugin-typescript": "^11.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/node": "^20.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "msw": "^1.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vitest": "^0.33.0"
  },
  "prettier": {
    "printWidth": 120,
    "importOrder": [
      "^[./]"
    ],
    "importOrderCaseInsensitive": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,html,css,scss,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c tsc",
      "vitest related --run"
    ]
  }
}
