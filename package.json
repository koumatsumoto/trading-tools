    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.31.4"
  },
  "prettier": {
    "printWidth": 140,
    "importOrder": [
      "^[./]"
    ],
    "importOrderCaseInsensitive": true
  },
  "commitlint": {
